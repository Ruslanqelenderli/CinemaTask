@using Cinema.Models
@model AddSeatViewModel
@{
    ViewBag.Title = "AddSeat";
}

<div class="row row-space">
    <div class="  col-md-5">
        @using (Html.BeginForm("AddSeat", "Seat", FormMethod.Post))
        {
            <label style="display:block">Hall</label>
            <select  class="form-control select2 " id="HallId" name="HallId" >
                <option value="0"></option>
                @foreach (var item in Model.Halls)
                {
                    <option value="@item.Id">@item.Name</option>
                }


            </select>
            <label style="display:block">Row</label>
            <input type="text" name="Row" class="form-control" />
            <label>Column</label>
            <input type="number" name="Column" class="form-control" />
            <hr />

            <input type="submit" value="Add" class="form-control" />

        }
    </div>
    <div class="col-md-7">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Hall Name</th>
                    <th>Row</th>
                    <th>Column</th>
                    <th>Delete</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Seat item in Model.Seats)
                {
                    <tr>
                        <td>@item.Hall.Name</td>
                        <td>@item.Row</td>
                        <td>@item.Column</td>
                        <td><a onclick="return confirm('Are you sure?')"  href="@Url.Action("SeatDelete","Seat",new { id=item.Id})">Delete</a></td>
                        <td><a href="@Url.Action("SeatUpdate","Seat",new { id=item.Id})">Update</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
